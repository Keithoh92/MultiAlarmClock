<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="dataModel"
            type="com.example.multialarmclock.classes.BuildAlarmViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BuildNewAlarm"
        android:background="#000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mytoolbar_build_alarm"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#222224"
                app:titleTextColor="#3464eb"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            </androidx.appcompat.widget.Toolbar>


            <RelativeLayout
                android:id="@+id/text_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/shape_corner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/edittext_background">

                </com.google.android.material.imageview.ShapeableImageView>

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@id/shape_corner"
                    android:layout_marginLeft="10dp"
                    android:elevation="3dp"
                    android:gravity="center_vertical"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:outlineProvider="none"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </EditText>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pick_days_cv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/edit_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/dark_cv"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:id="@+id/layout_for_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/edit_name"
                        android:layout_gravity="center_vertical">

                        <Button
                            android:id="@+id/days_dialog_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/edit_name"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_background1"
                            android:drawableEnd="@android:drawable/arrow_down_float"
                            android:drawablePadding="16dp"
                            android:elevation="3dp"
                            android:outlineSpotShadowColor="@color/black"
                            android:paddingLeft="25dp"
                            android:paddingRight="10dp"
                            android:shadowColor="@color/black"
                            android:text="Pick Days"
                            android:textAlignment="center"
                            android:textColor="#1a51ed"
                            android:textSize="18dp"
                            android:textStyle="bold">

                        </Button>

                        <LinearLayout
                            android:id="@+id/top_cv_linear_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/radio_group_tv"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="Set Every Week"
                                android:textColor="#e8e8e8">

                            </TextView>

                            <RadioGroup
                                android:id="@+id/radioGroup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="50dp"
                                android:layout_marginBottom="1dp"
                                android:background="@drawable/toggle_switch_colour"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/toggle_on"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/toggle_switch_background"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="On"
                                    android:textColor="@color/white" />

                                <RadioButton
                                    android:id="@+id/toggle_off"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/toggle_switch_background"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="Off"
                                    android:textColor="@color/white" />

                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!--         START CARDVIEW HERE                       -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/pick_time_cv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/pick_days_cv"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/dark_cv"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:id="@+id/time_button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <Button
                            android:id="@+id/open_time_picker_start"
                            android:layout_height="50dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Select Start Time"
                            android:textColor="#1a51ed"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/button_background1">

                        </Button>

                        <Button
                            android:id="@+id/open_time_picker_end"
                            android:layout_height="50dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Select End Time"
                            android:textColor="#1a51ed"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/button_background1">

                        </Button>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/time_tvs"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/start_time_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="07:00"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="30dp">

                        </TextView>

                        <TextView
                            android:id="@+id/end_time_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="08:00"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="30dp">

                        </TextView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/new_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/pick_time_cv"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/dark_cv"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/time_range_tv"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="30dp"
                            android:layout_below="@id/pick_time_cv"
                            android:text="Set this alram to go off every:"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center">

                        </TextView>

                        <CheckBox
                            android:id="@+id/every_radio"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="right">

                        </CheckBox>
                    </LinearLayout>


                    <com.ramotion.fluidslider.FluidSlider
                        android:id="@+id/fluid_slider"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@id/time_range_tv"
                        android:layout_marginTop="10dp"
                        android:visibility="invisible">

                    </com.ramotion.fluidslider.FluidSlider>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/new_cardview2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/new_cardview"
                    android:layout_marginTop="2dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="25dp"
                    android:backgroundTint="@color/dark_cv">

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</layout>