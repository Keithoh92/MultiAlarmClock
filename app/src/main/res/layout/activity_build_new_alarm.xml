<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="dataModel"
            type="com.example.multialarmclock.classes.AlarmViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BuildNewAlarm"
        android:background="#000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mytoolbar_build_alarm"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#222224"
                app:titleTextColor="#3464eb"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            </androidx.appcompat.widget.Toolbar>


            <RelativeLayout
                android:id="@+id/text_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/shape_corner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/edittext_background">

                </com.google.android.material.imageview.ShapeableImageView>

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@id/shape_corner"
                    android:layout_marginStart="10dp"
                    android:elevation="3dp"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_alarm_name"
                    android:inputType="textPersonName"
                    android:outlineProvider="none"
                    android:textSize="20sp"
                    >

                </EditText>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pick_days_cv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/edit_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/dark_cv"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:id="@+id/layout_for_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/edit_name"
                        android:layout_gravity="center_vertical"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cb_day1"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/checkbox_selector"
                                android:button="@null"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"
                                android:text="M"
                                android:textAlignment="center"
                                android:textColor="@color/white">

                            </CheckBox>

                            <CheckBox
                                android:id="@+id/cb_day2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/checkbox_selector"
                                android:button="@null"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"
                                android:text="T"
                                android:textAlignment="center"
                                android:textColor="@color/white">

                            </CheckBox>

                            <CheckBox
                                android:id="@+id/cb_day3"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/checkbox_selector"
                                android:button="@null"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"
                                android:text="W"
                                android:textAlignment="center"
                                android:textColor="@color/white">

                            </CheckBox>

                            <CheckBox
                                android:id="@+id/cb_day4"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/checkbox_selector"
                                android:button="@null"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"
                                android:text="T"
                                android:textAlignment="center"
                                android:textColor="@color/white">

                            </CheckBox>

                            <CheckBox
                                android:id="@+id/cb_day5"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/checkbox_selector"
                                android:button="@null"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"
                                android:text="F"
                                android:textAlignment="center"
                                android:textColor="@color/white">

                            </CheckBox>

                            <CheckBox
                                android:id="@+id/cb_day6"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/checkbox_selector"
                                android:button="@null"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"
                                android:text="S"
                                android:textAlignment="center"
                                android:textColor="@color/white">

                            </CheckBox>

                            <CheckBox
                                android:id="@+id/cb_day7"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/checkbox_selector"
                                android:button="@null"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"
                                android:text="S"
                                android:textAlignment="center"
                                android:textColor="@color/white">

                            </CheckBox>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/top_cv_linear_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/radio_group_tv"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="Set Every Week"
                                android:textColor="#e8e8e8">

                            </TextView>

                            <RadioGroup
                                android:id="@+id/radioGroup"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="50dp"
                                android:layout_marginBottom="1dp"
                                android:background="@drawable/toggle_switch_colour"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/toggle_on"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/toggle_switch_background"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="On"
                                    android:textColor="@color/white" />

                                <RadioButton
                                    android:id="@+id/toggle_off"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/toggle_switch_background"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="Off"
                                    android:textColor="@color/white" />

                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--         START CARDVIEW HERE                       -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/pick_time_cv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/pick_days_cv"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/dark_cv"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:id="@+id/time_button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <Button
                            android:id="@+id/open_time_picker_start"
                            android:layout_height="50dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Select Start Time"
                            android:textColor="#1a51ed"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/button_background1">

                        </Button>

                        <Button
                            android:id="@+id/open_time_picker_end"
                            android:layout_height="50dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Select End Time"
                            android:textColor="#1a51ed"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/button_background1">

                        </Button>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/time_tvs"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/start_time_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="07:00"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="30dp">

                        </TextView>

                        <TextView
                            android:id="@+id/end_time_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="08:00"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="30dp">

                        </TextView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/interval_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_below="@+id/pick_time_cv">

                <androidx.cardview.widget.CardView
                    android:id="@+id/new_cardview2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_marginTop="2dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="25dp"
                    android:backgroundTint="@color/dark_cv">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">



                        <TextView
                            android:id="@+id/alarm_sound"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alarm Sound"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp">
                        </TextView>

                        <View
                            android:layout_width="150dp"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ringtone_tv"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:text="Current: \nDefault"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:textAlignment="textStart"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp">
                            </TextView>

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent">

                                <ImageButton
                                    android:id="@+id/play_button"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/play1"
                                    android:background="@color/dark_cv"
                                    android:visibility="visible"
                                    >
                                </ImageButton>
                                <ImageButton
                                    android:id="@+id/stop_button"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:background="@color/dark_cv"
                                    android:src="@drawable/stop1"
                                    android:visibility="invisible"
                                    >
                                </ImageButton>
                            </FrameLayout>

                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/choose_ringtone"
                            android:layout_width="50dp"
                            android:layout_height="18dp"
                            android:background="@color/dark_cv"
                            android:layout_marginVertical="0dp"
                            android:src="@drawable/icons8_expand_arrow_24"
                            >
                        </ImageButton>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/new_cardview3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:layout_marginTop="2dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="25dp"
                        android:backgroundTint="@color/dark_cv">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/interval_tv"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:text="Interval (mins)"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:gravity="center"
                                android:layout_margin="5dp">
                            </TextView>

                            <View
                                android:layout_width="150dp"
                                android:layout_height="2dp"
                                android:background="@color/blue"
                                android:layout_gravity="center">
                            </View>

                            <NumberPicker
                                android:id="@+id/interval_picker"
                                android:layout_width="100dp"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                android:solidColor="@color/dark_cv"
                                android:theme="@style/AppTheme"
                                android:divider="@color/blue"
                                android:showDividers="beginning"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                >

                            </NumberPicker>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="save"
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/interval_linear_layout">

                </Button>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</layout>